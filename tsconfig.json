{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es2015",
    "module": "commonjs",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "typeRoots": [
      "src/index.d.ts",
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "./src/demo-app/**/*"
  ]
}